<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:background="@color/defaultBackgroundColor"

    >
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/textViewOnee"
            android:text="NEWS I"
            android:textStyle="bold"
            android:textColor="@color/textNewsColor"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@color/defaultTextBackgroudColor"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/textViewOne"
            android:text="Lorem Ipsum is simply dummy text. Lorem Ipsum has been the industry's standard dummy text ever s make a type specimen book."
            android:textColor="@color/defaultTextColor"
            android:textSize="10sp"
            android:gravity="center"
            android:background="@color/defaultTextBackgroudColor"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/imageViewOne"
            android:background="@color/defaultTextBackgroudColor"
            android:layout_weight="0.3"
            android:src="@drawable/maxresdefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewOneee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@color/defaultTextBackgroudColor"
            android:gravity="center"
            android:text="NEWS II"
            android:textStyle="bold"
            android:textColor="@color/textNewsColor"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textViewOner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@color/defaultTextBackgroudColor"
            android:gravity="center"
            android:text="Lorem Ipsum is simply dummy text. Lorem Ipsum has been the industry's standard dummy text ever s make a type specimen book."
            android:textColor="@color/defaultTextColor"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/imageViewFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@color/defaultTextBackgroudColor"
            android:src="@drawable/maxresdefault" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"

        >

        <Button
            android:id="@+id/buttonOne"
            android:text="@string/button_one"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bluecolor"
            android:textColor="@color/whiteColor"
            android:layout_marginRight="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"



            />
        <Button
            android:id="@+id/buttonTwo"
            android:text="@string/button_two"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bluecolor"
            android:textColor="@color/whiteColor"
            android:layout_marginRight="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"

            />
        <Button
            android:id="@+id/buttonThree"
            android:text="@string/button_three"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bluecolor"
            android:textColor="@color/whiteColor"
            android:layout_marginRight="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.5"
        android:background="@color/iconsColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewOnes"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/maps" />

        <ImageView
            android:id="@+id/imageViewTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gmail"
            android:layout_weight="1"/>


        <ImageView
            android:id="@+id/imageViewThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chrome"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/imageViewFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drive"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1.5"
        >

        <TextView
            android:id="@+id/textMap"
            android:text="Maps"
            android:gravity="center"
            android:layout_weight="0.3"
            android:background="@color/iconsColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textGmail"
            android:text="Gmail"
            android:background="@color/iconsColor"
            android:gravity="center"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textChrome"
            android:text="Chrome"
            android:gravity="center"
            android:background="@color/iconsColor"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textDrive"
            android:text="Drive"
            android:gravity="center"
            android:background="@color/iconsColor"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>